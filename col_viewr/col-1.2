#!/bin/bash
if [ $# == 0 ]; then
	cat <<EOF
	View tabular data (tsv, csv) (csv support pending)
	print leading ## starting lines, then align tabular data
	ommit after 100001
EOF
fi
# extract if gz (less) \
# sed change ## lines tab to %t%
# non## lines - no tab lines, comma to tab
# change consequtive tabs to tab-na-tab
# add ]\t to all start
# add all \t~ to end of lines
# from zero to ] starting lines
# remove trailing tab
less -f "${1:-/dev/stdin}" | \
sed -r '/^##/ s/\t/%t%/g;
	/^##/! {
		/\t/!{s/,/\t/g}
		:x; s/(^|\t)\t/\1NA\t/; tx
		s/^/]\t/
		s/$/\t~/
	}
	0,/^]/ {
		s/\t~$//
		/^##/! s/$/\t/
		:a
		/[^]]\t/{
      		x;:b;s/9(_*)$/_\1/;tb;s/^(_*)$/0\1/;s/$/:0123456789/;s/([^_])(_*):.*\1(.).*/\3\2/;s/_/0/g;x;G;
      		s/([^]\t]+)\t(.*)\n(.*)/\1[\3]\t\2/;
      		ta
    	}
	}
	100001 {s/.*/Ommited after 100,000th line/;q}
  ' |
column -t -s $'\t' | sed 's/^][ ]*//;s/%t%/\t/g'|less -S~ 
